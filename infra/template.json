{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "containerGroups_apim_response_tester_name": {
            "defaultValue": "apim-response-tester",
            "type": "String"
        },
        "endpointFqdn": {
            "type": "String"
        },
        "imageVersion": {
            "type": "String"
        }
    },
    "variables": {
        "location": {
            "defaultValue": "uksouth",
            "type": "String"
        }
    },
    "resources": [
        {
            "type": "Microsoft.ContainerInstance/containerGroups",
            "apiVersion": "2024-10-01-preview",
            "name": "[format('{0}-{1}', parameters('containerGroups_apim_response_tester_name'), copyIndex())]",
            "location": "uksouth",
            "tags": {
                "createby": "jleitch",
                "purpose": "test",
                "precious": "no"
            },
            "copy": {
                "name": "instanceCopy",
                "count": 2
            },
            "properties": {
                "sku": "Standard",
                "containers": [
                    {
                        "name": "[parameters('containerGroups_apim_response_tester_name')]",
                        "properties": {
                            "image": "[concat('maclighiche/', parameters('containerGroups_apim_response_tester_name'), '-amd64:', parameters('imageVersion'))]",
                            "ports": [
                                {
                                    "protocol": "TCP",
                                    "port": 8080
                                }
                            ],
                            "environmentVariables": [
                                {
                                    "name": "ENDPOINT_FQDN",
                                    "value": "[format('{0}-{1}{2}', parameters('containerGroups_apim_response_tester_name'), copyIndex(), parameters('endpointFqdn'))]"
                                }
                            ],
                            "resources": {
                                "requests": {
                                    "memoryInGB": 1.5,
                                    "cpu": 1
                                }
                            }
                        }
                    }
                ],
                "initContainers": [],
                "restartPolicy": "OnFailure",
                "ipAddress": {
                    "ports": [
                        {
                            "protocol": "TCP",
                            "port": 8080
                        }
                    ],
                    "type": "Public",
                    "dnsNameLabel": "[format('{0}-{1}', parameters('containerGroups_apim_response_tester_name'), copyIndex())]",
                    "autoGeneratedDomainNameLabelScope": "Unsecure"
                },
                "osType": "Linux"
            }
        }
    ]
}
